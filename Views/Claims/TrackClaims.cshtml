<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pending Claims (Programme Coordinator)</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #121212;
            color: #e0e0e0;
        }

        .container {
            background-color: rgba(40, 40, 40, 0.9);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
            max-width: 1000px;
            margin: 0 auto;
        }

        h2 {
            font-size: 24px;
            color: #ffffff;
            text-align: center;
            margin-bottom: 20px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            background-color: #1e1e1e;
            border: 1px solid #444;
        }

            .table thead {
                background-color: #007bff;
                color: white;
            }

            .table th, .table td {
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #444;
                color: #e0e0e0; /* Ensuring text is visible */
            }

            .table tbody tr:nth-child(odd) {
                background-color: #2c2c2c;
            }

            .table tbody tr:hover {
                background-color: #333;
            }

        a {
            color: #4aa3ff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="container">
        <h2>Tracking Claims</h2>

        <table class="table">
            <thead>
                <tr>
                    <th>Lecturer Name</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Notes</th>
                    <th>Status</th>
                    <th>Supporting Document</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.LecturerName</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate</td>
                        <td>@claim.AdditionalNotes</td>
                        <td>@claim.Status</td>
                        <td>
                            @if (!string.IsNullOrEmpty(claim.SupportingDocumentPath))
                            {
                                var SupportingDocumentPath = System.IO.Path.GetFileName(claim.SupportingDocumentPath);
                                <span>@SupportingDocumentPath</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
