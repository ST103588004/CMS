@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Dark theme styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #121212;
            color: #e0e0e0;
            margin: 0;
            padding: 20px;
        }

        /* Banner styling */
        .banner {
            background-color: #1f1f1f;
            padding: 40px;
            border-radius: 8px;
            text-align: center;
            margin-bottom: 40px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
        }

            .banner h1 {
                color: #ffffff;
                font-size: 36px;
                margin: 0;
            }

        /* Centered text and layout */
        .content {
            text-align: center;
        }

    </style>
</head>
<body>

    <!-- Dark-themed Banner -->
    <div class="banner">
        <h1>Welcome to the Contract Claims System</h1>
    </div>

    <!-- Main content section -->
    <div class="content">
        <h2>Your central hub for managing claims</h2>
    </div>

</body>
</html>
